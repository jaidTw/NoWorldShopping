{
  "manifest_version": 3,
  "name": "No World Shopping",
  "version": "1.0.0",
  "description": "Blocks world shopping services on Japanese e-commerce sites",
  "permissions": ["activeTab", "storage", "scripting", "declarativeNetRequest"],
  "host_permissions": [
    "https://*.worldshopping.jp/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "No World Shopping"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "rules": [
          {
            "id": 1,
            "priority": 1,
            "action": { "type": "block" },
            "condition": {
              "urlFilter": "*://worldshopping.jp/*",
              "resourceTypes": ["main_frame", "sub_frame", "stylesheet", "script", "image", "font", "object", "xmlhttprequest", "ping", "csp_report", "media", "websocket", "other"]
            }
          },
          {
            "id": 2,
            "priority": 1,
            "action": { "type": "block" },
            "condition": {
              "urlFilter": "*://*.worldshopping.jp/*",
              "resourceTypes": ["main_frame", "sub_frame", "stylesheet", "script", "image", "font", "object", "xmlhttprequest", "ping", "csp_report", "media", "websocket", "other"]
            }
          }
        ]
      }
    ]
  }
}
